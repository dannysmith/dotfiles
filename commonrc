#######################################################
# This contains settings common to both zsh and bash  #
# Danny Smith - http://danny.is                       #
#######################################################
source ~/.pathrc # Set PATH

################ Application Shortcuts ################
alias c="cursor"
alias claude="/Users/danny/.claude/local/claude"

################ Location Shortcuts ################
alias dl="cd ~/Downloads"
alias dt="cd ~/Desktop"
alias dev="cd ~/dev"
alias dannyis="cd ~/dev/dannyis-astro"
alias notes="cd ~/notes"

################ Env Variables ################

#Sets SVN, GVS and default editors
export EDITOR="c --wait"
export CVSEDITOR="c --wait"
export SVN_EDITOR="c --wait"

export LC_ALL=en_GB.UTF-8
export LANG=en_GB.UTF-8
export ARCHFLAGS="-arch x86_64"
export SSH_KEY_PATH="~/.ssh/dsa_id"
export MANPATH="/usr/local/man:$MANPATH"

# Bun https://bun.sh/docs/installation
export BUN_INSTALL="$HOME/.bun"

# Added by `rbenv init` on Wed 11 Jun 2025 18:32:21 BST
eval "$(rbenv init - --no-rehash zsh)"

################ Other Shortcuts ################

# Reload the shell (i.e. invoke as a login shell)
alias reload="exec $SHELL -l"

#Redefine rm for safety
alias rm='rm -i'

# Use bat instead of cat
alias cat='bat'

################ Git Shortcuts ################

alias g='git'
alias gst='git status -s'
alias gcm='git commit -m'
alias gco='git checkout'
alias ghopen='gh repo view --web'

################ Cargo ################
. "$HOME/.cargo/env"

################ Set GPG TTY ################
# Needed for gpg signing with git commit/push
export GPG_TTY=$(tty)

################ Pnpm ################

# source npm override commands
[ -f ~/.pnpm-wrappers ] && source ~/.pnpm-wrappers

################ Local .commonrc.local ################

# If ~/commonrc.local exists, source it - use for local settings which main contain sensitive data
[ -f ~/.commonrc.local ] && source ~/.commonrc.local
